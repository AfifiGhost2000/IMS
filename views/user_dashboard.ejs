    /* Style the chevron button */
    .chevron {
      display: inline-block;
      width: 12px;
      height: 12px;
      border-right: 2px solid #333;
      border-bottom: 2px solid #333;
      transform: rotate(45deg);
      margin-left: 5px;
    }

    /* Rotate the chevron button when clicked */
    .rotated {
      transform: rotate(180deg);
    }
    
    tbody{
