<body>
    <header>
        <div class="header-top">
            <div class="icon"><i class="fas fa-user"></i></div>
            <div class="login-register">
                <a href="logout">Logout</a> 
            </div>
        </div>
        <div class="horizontal-line"></div>
    </header>

    <div class="container">
        <div class="left-part"> 
        <h1 class="left-header">Welcome <%= user.fullname %></h1>
        <p class="left-para">No. of Applications: <%= rowCount %> </p>
        <center>
            <a href="/user_dashboard/new_application">
                <button class="center-btn">New Application</button>
            </a> 
        </center>
          
    </div>

    <div class="right-part">
     
        <h1>My Applications</h1>
    
        
        <table class="users-table">

            <tbody>

                <% userapplications.forEach(function(user) { %>
                    <tr>
                        <td>
                            <i id="right_icon" class="fas fa-user"></i><span></span>
                        </td>
                        <td>     
                            <h3 class="username"><%= user.fullname %></h3>
                            <h5 class="date"><%= user.application_date %></h5>
                        </td>

                        <td>
                            <% if (user.status === 'PENDING') { %>
                                <div class="status-circle yellow"></div>
                            <% } else if (user.status === 'ACCEPTED') { %>
                                <div class="status-circle green"></div>
                            <% } else if (user.status === 'REJECTED') { %>
                                <div class="status-circle red"></div>
                            <% } %>
                            <span class="status-caption"><%= user.status %></span>
                        </td>

                    </tr>

                    <tr>
                        <td colspan="3"><hr class="my-horizontal-line"></td>
                    </tr>


            
            

                <% }); %>

            </tbody>
        </table>

        <div class="center-btn-container">
            <a href="/user_dashboard/new_application">
                <button class="center-btn">New Application</button>
            </a>
        </div>
        
    </div>
</div>
